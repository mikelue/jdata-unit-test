					  - By default, this plugin would generate javadoc and test-javadoc
					  - This setting remove the generating of test-javadoc
					  -->
					<reportSet>
						<id>default</id>
						<inherited>true</inherited>
						<reports>
							<report>javadoc</report>
						</reports>
					</reportSet>
					<!-- :~) -->
				</reportSets>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jxr-plugin</artifactId>
				<reportSets>
					<reportSet>
						<id>default</id>
						<reports>
							<report>jxr</report>
							<report>test-jxr</report>
						</reports>
						<inherited>true</inherited>
						<configuration>
							<stylesheet>${basedir}/../src/site/resources/css/jxr.css</stylesheet>
						</configuration>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>

	<profiles>
		<profile>
			<id>gh-pages</id>
			<build>
				<plugins>
					<!--
					  - "With a multi modules build, you cannot simply use mvn site-deploy: you must stage your site first."
					  -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-scm-publish-plugin</artifactId>
						<version>3.0.0</version>
						<configuration>
							<pubScmUrl>${project.scm.developerConnection}</pubScmUrl>
							<checkinComment>Update report for ${project.version}</checkinComment>
							<scmBranch>gh-pages</scmBranch>
						</configuration>
					</plugin>
					<!-- :~) -->
				</plugins>
			</build>
			<reporting>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-project-info-reports-plugin</artifactId>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<reportSets>
							<reportSet>
								<id>default</id>
								<inherited>true</inherited>
								<configuration>
									<skip>true</skip>
								</configuration>
							</reportSet>
							<reportSet>
								<id>aggregate</id>
								<inherited>false</inherited>
								<reports>
									<report>aggregate</report>
								</reports>
							</reportSet>
						</reportSets>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jxr-plugin</artifactId>
						<reportSets>
							<reportSet>
								<id>default</id>
								<inherited>true</inherited>
								<configuration>
									<skip>true</skip>
								</configuration>
							</reportSet>
							<reportSet>
								<id>aggregate</id>
								<inherited>false</inherited>
								<reports>
									<report>aggregate</report>
									<report>test-aggregate</report>
								</reports>
							</reportSet>
						</reportSets>
					</plugin>
				</plugins>
			</reporting>
		</profile>
		<profile>
			<id>oss-deploy</id>
			<distributionManagement>
				<snapshotRepository>
					<id>ossrh</id>
					<url>https://oss.sonatype.org/content/repositories/snapshots</url>
				</snapshotRepository>
			</distributionManagement>
			<build>
				<plugins>
					<plugin>
						<groupId>org.sonatype.plugins</groupId>
						<artifactId>nexus-staging-maven-plugin</artifactId>
						<version>1.6.8</version>
						<extensions>true</extensions>
						<configuration>
							<serverId>ossrh</serverId>
							<nexusUrl>https://oss.sonatype.org/</nexusUrl>
							<autoReleaseAfterClose>true</autoReleaseAfterClose>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>postgresql</id>
			<properties>
				<db.driverClassName>org.postgresql.Driver</db.driverClassName>
				<db.url>jdbc:postgresql://${db.server.name}/${db.name}</db.url>
			</properties>
			<dependencies>
				<dependency>
					<groupId>org.postgresql</groupId>
					<artifactId>postgresql</artifactId>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>mssql</id>
			<properties>
				<db.driverClassName>com.microsoft.sqlserver.jdbc.SQLServerDriver</db.driverClassName>
				<db.url>jdbc:sqlserver://${db.server.name}:1433;databaseName=${db.name}</db.url>
			</properties>
			<dependencies>
				<dependency>
					<groupId>com.microsoft.sqlserver</groupId>
					<artifactId>mssql-jdbc</artifactId>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>mysql</id>
			<properties>
				<db.driverClassName>com.mysql.jdbc.Driver</db.driverClassName>
				<db.url>jdbc:mysql://${db.server.name}:3306/${db.name}</db.url>
			</properties>
			<dependencies>
				<dependency>
					<groupId>mysql</groupId>
					<artifactId>mysql-connector-java</artifactId>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>oracle</id>
			<properties>
				<db.driverClassName>oracle.jdbc.OracleDriver</db.driverClassName>
				<db.url>jdbc:oracle:thin:@${db.server.name}:1521/orclpdb1</db.url>
			</properties>
			<dependencies>
				<dependency>
					<groupId>com.oracle</groupId>
					<artifactId>ojdbc8</artifactId>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>hsqldb</id>
			<properties>
				<db.driverClassName>org.hsqldb.jdbcDriver</db.driverClassName>
				<db.url>jdbc:hsqldb:file:target/hsqldb/${db.name};hsqldb.sqllog=2</db.url>
			</properties>
			<dependencies>
				<dependency>
					<groupId>org.hsqldb</groupId>
					<artifactId>hsqldb</artifactId>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>derby</id>
			<properties>
				<db.driverClassName>org.apache.derby.jdbc.EmbeddedDriver</db.driverClassName>
				<db.url>jdbc:derby:target/derby/${db.name};create=true;logDevice=target/derby</db.url>
			</properties>
			<dependencies>
				<dependency>
					<groupId>org.apache.derby</groupId>
					<artifactId>derby</artifactId>
					<scope>test</scope>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemProperties>
								<property>
									<name>derby.stream.error.file</name>
									<value>target/derby.log</value>
								</property>
							</systemProperties>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<!--
		  - This profile cannot be used for testing because of error from liquibase
		  - "SQLite only supports closing cursors at commit"
		  -->
		<profile>
			<id>sqlite</id>
			<properties>
				<db.driverClassName>org.sqlite.JDBC</db.driverClassName>
				<db.url>jdbc:sqlite:target/sqlite-${db.name}.db</db.url>
			</properties>
			<dependencies>
				<dependency>
					<groupId>org.xerial</groupId>
					<artifactId>sqlite-jdbc</artifactId>
					<scope>test</scope>
				</dependency>
			</dependencies>
		</profile>
		<!-- :~) -->

		<!-- Used to simplify authoring of site -->
		<profile>
			<id>site-author</id>

			<properties>
				<skip.aggregate>true</skip.aggregate>
			</properties>
			<reporting>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-project-info-reports-plugin</artifactId>
						<reportSets>
							<reportSet>
								<reports>
									<report>index</report>
								</reports>
							</reportSet>
						</reportSets>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<configuration>
							<skip>${skip.aggregate}</skip>
						</configuration>
						<reportSets>
							<!--
							  - Skips the building of sub-modules
							  -->
							<reportSet>
								<id>default</id>
								<inherited>true</inherited>
								<configuration>
									<skip>true</skip>
								</configuration>
							</reportSet>
							<!-- :~) -->
							<reportSet>
								<id>parent-build</id>
								<inherited>false</inherited>
								<reports>
									<report>aggregate</report>
								</reports>
							</reportSet>
						</reportSets>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-jxr-plugin</artifactId>
						<configuration>
							<skip>${skip.aggregate}</skip>
						</configuration>
						<reportSets>
							<!--
							  - Skips the building of sub-modules
							  -->
							<reportSet>
								<id>default</id>
								<inherited>true</inherited>
								<configuration>
									<skip>true</skip>
								</configuration>
							</reportSet>
							<!-- :~) -->
							<reportSet>
								<id>parent-build</id>
								<inherited>false</inherited>
								<configuration>
									<stylesheet>${basedir}/src/site/resources/css/jxr.css</stylesheet>
								</configuration>
								<reports>
									<report>aggregate</report>
									<report>test-aggregate</report>
								</reports>
							</reportSet>
						</reportSets>
					</plugin>
				</plugins>
			</reporting>
		</profile>
	</profiles>

	<repositories>
		<repository>
			<id>oss.sonatype.org</id>
			<name>oss.sonatype.org</name>
			<snapshots>
				<enabled>true</enabled>
				<checksumPolicy>fail</checksumPolicy>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
			<layout>default</layout>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<id>apache-snapshot</id>
			<name>Aapche Snapshot</name>
			<url>https://repository.apache.org/snapshots/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</pluginRepository>
	</pluginRepositories>
</project>
